<div class="shadow-md">
  <div class="p-8 bg-blue-500 text-white">
    <div class="mx-[10rem] rounded-md">
      <h1 class="text-[2rem] font-medium mb-4">The Easiest and Most Powerful
        Online Event Booking and Ticketing System</h1>
      <p class="text-lg mb-8">EventBooker is an all-in-one event ticketing
        platform for event organisers, promoters, and managers. Easily create,
        promote and manage your events of any type and size.</p>
      <a
        href="/create-event"
        class="bg-white text-blue-500 px-4 py-2 mt-4 rounded-full"
      >Create Event</a>
    </div>
  </div>

  <div class="mt-8 p-4">
    <h2 class="text-2xl font-bold mb-4">Explore Events</h2>
    <ul class="flex gap-4 mb-4">
      {{#each categories}}
        <li class="bg-white px-4 py-2 border rounded-md hover:bg-gray-200">
          <span
            class="text-black cursor-pointer"
            onclick="filterEvents(this)"
          >{{this}}</span>
        </li>
      {{/each}}
    </ul>
    <div id="filtered-events" class="flex flex-row items-start gap-4 flex-wrap">
      {{#each events}}
        <a
          href="/events/{{id}}"
          class="max-w-xs bg-white shadow-md rounded-md overflow-hidden"
        >
          <img
            src="{{image}}"
            alt="Event Image"
            class="h-48 w-full object-cover object-center"
          />
          <div class="p-4 flex flex-col gap-4">
            <h2 class="text-xl font-medium">{{eventName}}</h2>
            <div class="flex flex-row justify-between">
              <p class="text-gray-600">${{ticketPrice}}</p>
              <p class="text-gray-600">{{availableTickets}} Remaining</p>
            </div>
            <div class="flex flex-row justify-between">
              <p class="text-gray-600 whitespace-nowrap">{{eventDate}}<span
                  class="pr-2"
                >{{" "}} {{eventTime}}</span>
              </p>
              <p class="text-gray-600">{{duration}}h</p>
            </div>
          </div>
        </a>
      {{/each}}
    </div>
  </div>
</div>

<script>
  function filterEvents(selectedCategory) { const eventsContainer =
  document.getElementById('filtered-events'); const allCategories =
  eventsContainer.querySelectorAll('.bg-white'); const allEvents =
  eventsContainer.querySelectorAll('.max-w-xs'); allCategories.forEach(category
  => { category.classList.remove('bg-gray-300'); }); allEvents.forEach(event =>
  { const eventCategory = event.getAttribute('data-category'); if
  (selectedCategory === 'All' || eventCategory === selectedCategory.textContent)
  { event.style.display = 'block'; } else { event.style.display = 'none'; } });
  selectedCategory.parentNode.classList.add('bg-gray-300'); }
</script>